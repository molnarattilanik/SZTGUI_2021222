<Window x:Class="EnglishWords.WordCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishWords"
        mc:Ignorable="d"
        Title="WordCheckWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Hungarian Word" Background="LightBlue" Padding="10" />
        <Label x:Name="hun_label"  Padding="10" />
        <Label Content="English Word" Background="LightBlue" Padding="10" />
        <TextBox x:Name="eng_textBox" Padding="10" />
        <Button Content="Check!" Padding="10" Click="Button_Click" />
    </StackPanel>
</Window>
